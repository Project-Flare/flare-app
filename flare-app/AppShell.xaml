<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="flare_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:flare_app"
    xmlns:views="clr-namespace:flare_app.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="flare_app">


       <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

        <ShellContent
        Title="Registration"
        ContentTemplate="{DataTemplate views:RegistrationPage}"
        Route="RegistrationPage" />

        <ShellContent
        Title="User list"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="UserListPage" />

    <ShellContent
        Title="Discovery"
        ContentTemplate="{DataTemplate views:DiscoveryPage}"
        Route="DiscoveryPage" />


</Shell>
